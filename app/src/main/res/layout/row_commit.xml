<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/row_commit_ll"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/row_commit_image"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/row_commit_author"
                android:text="Author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#000000"
                android:alpha="0.54"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/row_commit_commentN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#000000"
                android:alpha="0.54"
                android:layout_alignParentRight="true"/>

            <ImageView
                android:id="@+id/row_commit_commenticon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_forum_gold_24dp"
                android:layout_toLeftOf="@id/row_commit_commentN"
                android:paddingRight="4dp"
                android:paddingTop="4dp"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/row_commit_description"
            android:text="Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000000"
            android:alpha="0.87"
            android:paddingTop="2dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/row_commit_sha"
                android:text="Sha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:paddingTop="4dp"
                android:textColor="#000000"
                android:alpha="0.54"/>

            <TextView
                android:id="@+id/row_commit_date"
                android:text="Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="14sp"
                android:paddingTop="4dp"
                android:textColor="#000000"
                android:alpha="0.54"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_schedule_black_24dp"
                android:layout_toLeftOf="@id/row_commit_date"
                android:paddingRight="4dp"
                android:paddingTop="7dp"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>